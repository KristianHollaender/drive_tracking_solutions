rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents{

  	//Allows an anonymous user to register
  	match /{User=**} {
  	allow write: if request.auth != null;
  		}

		// Allow users with the "User" role to read user info
    match /User/{userId} {
      allow read, update: if request.auth != null &&
        get(/databases/$(database)/documents/User/$(request.auth.uid)).data.role == "User";
      }

    // Allow users with the "User" role to create, read, and update tours
    match /Tour/{tourId}/{document=**} {
      allow read, write, update: if request.auth != null &&
        get(/databases/$(database)/documents/User/$(request.auth.uid)).data.role == "User";
      }

    // Allow users with the "Admin" role to perform all CRUD operations on User
    match /User/{userId} {
      allow read, delete, write, update: if request.auth != null &&
      get(/databases/$(database)/documents/User/$(request.auth.uid)).data.role == "Admin";
    }

    // Allow users with the "Admin" role to perform all CRUD operations on tours
    match /Tour/{tourId}/{document=**} {
      allow read, delete, write, update: if request.auth != null &&
      get(/databases/$(database)/documents/User/$(request.auth.uid)).data.role == "Admin";
    }
  }
}
